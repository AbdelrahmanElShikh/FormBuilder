<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FormApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/primaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/primaryColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="about_divider_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginStart">@dimen/_7sdp</item>
        <item name="android:layout_marginEnd">@dimen/_7sdp</item>
    </style>
    <style name="text_style">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_style">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="mainApp_style">
        <item name="android:background">@color/primaryColor</item>
    </style>
    <style name="toolbar_style">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="colorControlNormal">@color/primaryColor</item>
    </style>
</resources>